---
import MainLayout from "../layouts/MainLayout.astro";
import CardSelector from "../components/ui/CardSelector";
---

<MainLayout>
  <main>
    <h2>Encuentra la carta ideal</h2>
    <section>
      <CardSelector client:visible />
    </section>
  </main>
</MainLayout>

<style>
  main {
    margin: 8rem auto;
    width: stretch;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    font-size: var(--font-big);
    text-align: center;
    margin-bottom: 2rem;
  }

  section {
    width: 100%;
    max-width: 1200px;
  }
</style>
