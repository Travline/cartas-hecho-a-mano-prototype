---
import MainLayout from "../layouts/MainLayout.astro";
import ReasonCard from "../components/layouts/ReasonCard.astro";
import ButtonMainColor from "../components/layouts/ButtonMainColor.astro";
---

<MainLayout
  title="Elige el motivo de tu carta"
  description="Escoge el motivo que mejor transmita tu sentimiento, nosotros nos encargamos de hacerlo realidad"
  image="https://cartas-hecho-a-mano-prototype.vercel.app/assets/logo-full-color-text-bg.png"
>
  <main>
    <h2>Elige que transmitir</h2>
    <section class="container">
      <ReasonCard
        imgSrc="/assets/carta-pareja.webp"
        imgAlt="Carta para expresar cariño a tus amigos o pareja"
        reason="Carta a mano para tu pareja o amistades"
      />
      <ReasonCard
        imgSrc="/assets/carta-matrimonio.webp"
        imgAlt="Carta de invitación a tu boda"
        reason="Carta a mano para invitaciones de boda / aniversario"
      />
      <ReasonCard
        imgSrc="/assets/carta-cumple.webp"
        imgAlt="Carta de invitacion a cumpleaños"
        reason="Carta a mano para felicitación de cumpleaños"
      />
      <ReasonCard
        imgSrc="/assets/carta-empleados.webp"
        imgAlt="Carta para felicitar a tus empleados"
        reason="Cartas a mano para felicitar a tus trabajadores"
      />
      <ReasonCard
        imgSrc="/assets/carta-navidad.webp"
        imgAlt="Carta para felicitaciones de año nuevo o navidad"
        reason="Cartas a mano para felicitar en Navidad & Año nuevo"
      />
      <ReasonCard
        imgSrc="/assets/carta-condolencias.webp"
        imgAlt="Carta para expresar condolencias"
        reason="Cartas a mano de duelo para dar condolencias"
      />
      <ReasonCard
        imgSrc="/assets/carta-nacimiento.webp"
        imgAlt="Carta de felicitaciones por nmacimiento"
        reason="Cartas a mano de felicitación por el nacimiento de un hijo(a)."
      />
      <ReasonCard
        imgSrc="/assets/carta-perdon.webp"
        imgAlt="Personas abrazándose"
        reason="Cartas a mano para pedir perdón"
      />
      <ReasonCard
        imgSrc="/assets/carta-liberacion.webp"
        imgAlt="Persona alzando los brazos en un campo verde"
        reason="Cartas de guía (ánimo, propósito, transición vital)"
      />
      <div class="final">
        No encontraste algo que exprese lo que sientes
        <ButtonMainColor url="https://wa.me/51992379259?text=Hola,%20tengo%20una%20consulta" target="_blank" aria-label="WhatsApp">Contáctanos</ButtonMainColor>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  /* --- Estilos de Estructura de Página --- */
  main {
    margin: 6rem auto;
    min-height: 60dvh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    font-size: var(--font-big);
    text-align: center;
    margin-bottom: 2rem;
  }

  section {
    width: 100%;
    max-width: 1200px;
  }

  /* --- Unificación de la Cuadrícula y Cards --- */
  .container {
    display: grid;
    /* auto-fill crea tantas columnas como quepan de mínimo 10rem */
    grid-template-columns: repeat(auto-fill, minmax(10rem, 1fr));
    gap: 1rem;
    padding: 1rem;
  }

  .final {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: stretch;
    gap: 2rem;
    text-align: center;
  }
  
  @media (max-width: 480px) {
    .container {
      grid-template-columns: repeat(2, 1fr); 
      gap: 0.8rem;
      padding: 0.5rem;
    }
  }
</style>
