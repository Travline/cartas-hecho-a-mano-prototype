---
import MainLayout from "../layouts/MainLayout.astro";
import ReasonCard from "../components/ReasonCard.astro";
import ButtonMainColor from "../components/ButtonMainColor.astro";

import { cardsData } from "../content/cards";
---

<MainLayout
  title="Elige el motivo de tu carta"
  description="Escoge el motivo que mejor transmita tu sentimiento, nosotros nos encargamos de hacerlo realidad"
  image="https://cartas-hecho-a-mano-prototype.vercel.app/assets/logo-full-color-text-bg.png"
>
  <main>
    <h2>Elige que transmitir</h2>
    <section class="container">
      {
        cardsData.map((card) => (
          <ReasonCard
            imgSrc={card.img}
            imgAlt={card.alt}
            reason={card.reason}
            slug={card.slug}
          />
        ))
      }
      <div class="final">
        No encontraste algo que exprese lo que sientes
        <ButtonMainColor
          url="https://wa.me/51992379259?text=Hola,%20tengo%20una%20consulta"
          target="_blank"
          aria-label="WhatsApp">Contáctanos</ButtonMainColor
        >
      </div>
    </section>
  </main>
</MainLayout>

<style>
  /* --- Estilos de Estructura de Página --- */
  main {
    margin: 6rem auto;
    min-height: 80dvh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    font-size: var(--font-big);
    text-align: center;
    margin-bottom: 2rem;
  }

  section {
    width: 100%;
    max-width: 1200px;
  }

  /* --- Unificación de la Cuadrícula y Cards --- */
  .container {
    display: grid;
    /* auto-fill crea tantas columnas como quepan de mínimo 10rem */
    grid-template-columns: repeat(auto-fill, minmax(10rem, 1fr));
    gap: 1rem;
    padding: 1rem;
  }

  .final {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: stretch;
    gap: 2rem;
    text-align: center;
  }

  @media (max-width: 480px) {
    .container {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.8rem;
      padding: 0.5rem;
    }
  }
</style>
