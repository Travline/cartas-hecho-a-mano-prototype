---
import MainLayout from "../layouts/MainLayout.astro";
import CardSelector from "../components/ui/CardSelector";
import { Image } from "astro:assets";
import { navigate } from "astro:transitions/client";
import ButtonMainColor from "../components/layouts/ButtonMainColor.astro";

export const prerender = false

const reason: any = Astro.url.searchParams.get("reason") || "No se escogió un motivo de carta" ;
---

<MainLayout>
  <section class="order-section">
    <div class="order-container">
      <h2>{reason.replace("%20"," ")}</h2>

      <form class="order-form">
        <fieldset class="pill-group">
          <legend>¿Cómo quieres el contenido?</legend>
          <div class="pill-options">
            <input
              type="radio"
              value="redactar"
              name="redaccion"
              id="redactar"
              checked
            />
            <label for="redactar">Redactar Carta</label>

            <input
              type="radio"
              value="sugerido"
              name="redaccion"
              id="sugerido"
            />
            <label for="sugerido">Texto Sugerido</label>
          </div>
        </fieldset>

        <div id="mensaje-container" class="text-area-container">
          <label for="mensaje">Escribe tu mensaje aquí:</label>
          <textarea id="mensaje" placeholder="Querido/a..."></textarea>
          <span id="word-count">0 palabras</span>
          <span>Trate de mantenerse por debajo de 65</span>
        </div>

        <div class="shipping-fields">
          <div class="input-group">
            <label for="destinatario">Nombre del Destinatario</label>
            <input
              type="text"
              id="destinatario"
              placeholder="Nombre completo"
              required
            />
          </div>

          <div class="input-group">
            <label for="direccion">Dirección exacta</label>
            <input
              type="text"
              id="direccion"
              placeholder="Av. Siempre viva 123..."
              required
            />
          </div>

          <div class="input-group">
            <label for="referencia">Añade una referencia</label>
            <input
              type="text"
              id="referencia"
              placeholder="Frente al parque..."
            />
          </div>
        </div>
        <ButtonMainColor id="sendWhatsapp">Confirmar Pedido</ButtonMainColor>
      </form>
    </div>
  </section>
</MainLayout>

<style>
  .order-section {
    padding: 6rem 2rem 4rem 2rem;
    background-color: white;
  }

  .order-container {
    max-width: 700px;
    margin: 0 auto;
  }

  h2 {
    font-size: var(--font-big);
    text-align: center;
    margin-bottom: 3rem;
  }

  .order-form {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  /* ESTILO DE PASTILLAS (Pills) */
  .pill-group {
    border: none;
    padding: 0;
    margin: 0;
  }

  .pill-group legend {
    font-size: var(--font-semi-big);
    font-weight: 600;
    margin-bottom: 1rem;
    display: block;
  }

  .card-selected p {
    font-size: var(--font-semi-big);
    font-weight: 600;
    margin-bottom: 1rem;
    display: block;
  }

  .image-container {
    width: 50%;
  }

  .image-container img {
    width: stretch;
    border-radius: 0.5rem;
  }

  .pill-options {
    display: flex;
    gap: 0.5rem;
    background-color: var(--main-light-accent-color);
    padding: 0.4rem;
    border-radius: 50px;
    width: fit-content;
  }

  .pill-options input[type="radio"] {
    display: none; /* Escondemos el radio original */
  }

  .pill-options label {
    padding: 0.6rem 1.2rem;
    border-radius: 50px;
    cursor: pointer;
    font-size: var(--font-regular);
    font-weight: 500;
    transition: all 0.3s ease;
    user-select: none;
  }

  /* Estado seleccionado de la pastilla */
  .pill-options input[type="radio"]:checked + label {
    background-color: var(--main-accent-color);
    color: white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* LÓGICA DE OCULTAR CAMPO DE TEXTO */
  /* Si el radio 'sugerido' está marcado, escondemos el contenedor del textarea */
  #sugerido:checked ~ .text-area-container {
    display: none;
  }

  .text-area-container {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .text-area-container label,
  .shipping-fields label {
    font-size: var(--font-regular);
    font-weight: 600;
  }

  textarea {
    width: 100%;
    min-height: 150px;
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.8rem;
    font-family: inherit;
    font-size: var(--font-regular);
    resize: vertical;
  }

  .text-area-container span {
    text-align: right;
    color: #666
  }

  .help-text {
    font-size: 0.85rem;
    color: #64748b;
    margin: 0;
  }

  /* CAMPOS DE ENVÍO */
  .shipping-fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  input[type="text"] {
    padding: 0.8rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    font-size: var(--font-regular);
  }

  .btn-order {
    padding: 1rem 1.5rem;
    background-color: var(--main-accent-color);
    color: white;
    border-radius: 0.5rem;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  .btn-order:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
  }
  .btn-order:active {
    transform: scale(0.98);
    filter: brightness(1.1);
  }

  /* RESPONSIVE */
  @media (max-width: 600px) {
    .shipping-fields {
      grid-template-columns: 1fr;
    }

    .pill-options {
      width: 100%;
      justify-content: space-between;
    }

    .pill-options label {
      flex: 1;
      text-align: center;
      padding: 0.6rem 0.5rem;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const btn = document.getElementById('sendWhatsapp');
  const form = document.querySelector('.order-form'); // Seleccionamos el formulario
  
  const radioRedactar = document.getElementById('redactar') as HTMLInputElement;
  const inputMensaje = document.getElementById('mensaje') as HTMLTextAreaElement;
  const inputDestinatario = document.getElementById('destinatario') as HTMLInputElement;
  const inputDireccion = document.getElementById('direccion') as HTMLInputElement;
  const inputReferencia = document.getElementById('referencia') as HTMLInputElement;

  btn?.addEventListener('click', (e) => {
    // 1. IMPORTANTE: Evita que el formulario recargue la página o cambie la URL
    e.preventDefault();

    // 2. Validaciones básicas obligatorias
    if (!inputDestinatario.value.trim() || !inputDireccion.value.trim()) {
      alert("Por favor, completa el nombre del destinatario y la dirección.");
      return;
    }

    // 3. Validación específica para "Redactar"
    if (radioRedactar.checked && !inputMensaje.value.trim()) {
      alert("Has seleccionado 'Redactar Carta', por favor escribe un mensaje.");
      inputMensaje.focus(); // Pone el cursor en el textarea
      return;
    }

    // 4. Construcción del mensaje (Lógica anterior)
    const phone = "51992379259";
    const urlParams = new URLSearchParams(window.location.search);
    const motivo = (urlParams.get('reason') || "No especificado").trim();

    let seccionContenido = "";
    if (radioRedactar.checked) {
      seccionContenido = `Contenido:\n${inputMensaje.value.trim()}`;
    } else {
      seccionContenido = `Contenido: Sugiérame un texto`;
    }

    let seccionDatos = `Datos:\nDestinatario: ${inputDestinatario.value.trim()}\nDirección: ${inputDireccion.value.trim()}`;
    
    const referencia = inputReferencia.value.trim();
    if (referencia) {
      seccionDatos += `\nReferencia: ${referencia}`;
    }

    const mensajeCompleto = `Motivo: ${motivo}\n\n${seccionContenido}\n\n${seccionDatos}`;

    // 5. Enviar a WhatsApp
    const whatsappUrl = `https://wa.me/${phone}?text=${encodeURIComponent(mensajeCompleto)}`;
    window.open(whatsappUrl, '_blank');
  });
</script>

<script>
  // Esta función envuelve todo para que corra solo cuando el HTML esté listo
  document.addEventListener("DOMContentLoaded", () => {
    const radios = document.querySelectorAll('input[name="redaccion"]');
    const container = document.getElementById("mensaje-container");

    // Función interna para cambiar el estilo
    const toggleContainer = (valor: string) => {
      if (container) {
        container.style.display = valor === "sugerido" ? "none" : "flex";
      }
    };

    // Escuchamos el cambio en cada radio
    radios.forEach((radio) => {
      radio.addEventListener("change", (e) => {
        const el = e.target as HTMLInputElement;
        toggleContainer(el.value);
      });
    });

    // Ejecución inicial por si el navegador recuerda el estado al recargar
    const checkedRadio = document.querySelector(
      'input[name="redaccion"]:checked',
    ) as HTMLInputElement;
    if (checkedRadio) toggleContainer(checkedRadio.value);
  });
</script>

<script>
  const textarea = document.getElementById('mensaje');
  const MAX_WORDS = 65;

  textarea?.addEventListener('input', (e) => {
    const target = e.target as HTMLTextAreaElement;
    const text = target.value;

    // 1. Limpiamos el texto para contar palabras reales:
    // .trim() quita espacios extremos
    // .split(/\s+/) divide por cualquier espacio en blanco (espacio, tab, salto de línea)
    // .filter(Boolean) elimina elementos vacíos de la lista si hay múltiples espacios
    const words = text.trim().split(/\s+/).filter(Boolean);
    const wordCount = words.length;

    const counterDisplay = document.getElementById('word-count');
    if (counterDisplay) counterDisplay.textContent = `${wordCount} palabras`;
  });
</script>