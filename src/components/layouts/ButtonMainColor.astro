---
const { url, class: className, id, ...rest } = Astro.props;
const Element = url ? "a" : "button";
---

<Element href={url} id={id} class:list={["btn-base", className]} {...rest}>
  <slot />
</Element>

<style>
  .btn-base {
    padding: 1rem 1.5rem;
    background-color: var(--main-accent-color);
    color: white;
    border-radius: 0.5rem;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  .btn-base:hover {
    transform: scale(1.05);
  }
  .btn-base:active {
    transform: scale(0.95);
  }
</style>
