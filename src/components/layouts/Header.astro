---
import logo from "../../../public/assets/logo-full-color.webp";
import { Image } from "astro:assets";
---

<header>
  <div class="logo-container">
    <a class="preserved-space" href="/">
      <img class={"logo"} src="/assets/logo-full-color.webp" alt={"Logo Cartas Hecho A Mano"} />
    </a>
    <a class="logo-title" href="/">Cartas Hecho A Mano</a>
  </div>

  <input type="checkbox" id="menu-toggle" class="menu-checkbox" />

  <label for="menu-toggle" class="hamburger">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><line x1="3" y1="12" x2="21" y2="12"></line><line
        x1="3"
        y1="6"
        x2="21"
        y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg
    >
  </label>

  <nav>
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/how-it-works">Cómo funciona</a></li>
      <li><a href="/#faq">Preguntas Frecuentes</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: white;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4rem;
    z-index: 1000;
    box-shadow: 0 4px 8px rgb(0 0 0 / 10%);
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
  }

  .logo-container {
    height: stretch;
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center; 
  }

  .preserved-space {
    height: stretch;
    aspect-ratio: 1 / 1;
    padding: 0.5rem;
  }

  .logo {
    aspect-ratio: 1 / 1;
    width: 100%;
    height: stretch;
  }

  .logo-title {
    font-family: "Quintessential", serif;
    font-size: var(--font-big);
    font-weight: 600;
    color: var(--main-accent-color);
  }

  /* --- DESKTOP (Por defecto) --- */
  .menu-checkbox,
  .hamburger {
    display: none; /* OCULTO SIEMPRE EN DESKTOP */
  }

  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  ul li a {
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.2ñs ease;
  }

  ul li a:hover {
    color: white;
    background-color: var(--main-accent-color);
  }
  
  ul li a {
    color: var(--main-accent-color);
    font-size: var(--font-semi-big)
  }

  /* --- MOBILE (max-width: 768px) --- */
  @media (max-width: 768px) {
    .logo-title {
      display: none !important;
    }

    .hamburger {
      display: block; /* Solo aparece en móvil */
      cursor: pointer;
      z-index: 1001;
    }

    /* Seguimos ocultando el input físicamente pero dejamos que funcione */
    .menu-checkbox {
      display: none;
    }

    nav {
      position: fixed;
      top: 0;
      right: -100%; /* Fuera de pantalla */
      width: 90%;
      height: 100vh;
      background-color: white;
      padding-top: 100px;
      transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: -10px 0 20px rgba(0, 0, 0, 0.1);
    }

    ul {
      flex-direction: column;
      align-items: center;
      gap: 2.5rem;
    }

    /* Lógica de apertura: El selector ~ busca al hermano 'nav' */
    #menu-toggle:checked ~ nav {
      right: 0;
    }
  }
</style>
