  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-button {
    margin: 1.5rem 0;
  }

  @media (max-width: 768px) {
    .hero-container {
      flex-direction: column;
      padding-top: 1rem;
    }

    .banner-img {
